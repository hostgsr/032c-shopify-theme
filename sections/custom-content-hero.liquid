{{ 'section-custom-content-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #CustomHero-{{ section.id }} {
    {%- if section.settings.background_color != blank -%}
      background-color: {{ section.settings.background_color }};
    {%- endif -%}
    {%- if section.settings.text_color != blank -%}
      color: {{ section.settings.text_color }};
    {%- endif -%}
    position: relative;
    {%- if section.settings.height == 'small' -%}
      min-height: 300px;
    {%- elsif section.settings.height == 'medium' -%}
      min-height: 500px;
    {%- elsif section.settings.height == 'large' -%}
      min-height: 700px;
    {%- elsif section.settings.height == 'full' -%}
      min-height: 100vh;
    {%- endif -%}
  }

  #CustomHero-{{ section.id }}::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.image_overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  #CustomHero-{{ section.id }} .custom-hero__content {
    position: relative;
    z-index: 2;
  }

  {%- if section.settings.text_color != blank -%}
    #CustomHero-{{ section.id }} .custom-hero__heading,
    #CustomHero-{{ section.id }} .custom-hero__text,
    #CustomHero-{{ section.id }} .custom-hero__text p {
      color: {{ section.settings.text_color }};
    }
  {%- endif -%}

    /* Button styles - Override base styles and apply custom colors */
  #CustomHero-{{ section.id }} .button {
    /* Reset base button styles */
    outline: none !important;
    border: 1px solid;
    box-shadow: none !important;

    {%- if section.settings.button_background_color != blank -%}
      background-color: {{ section.settings.button_background_color }};
    {%- endif -%}
    {%- if section.settings.button_text_color != blank -%}
      color: {{ section.settings.button_text_color }};
      border: 1px solid {{ section.settings.button_text_color }} !important;
    {%- endif -%}
  }

  {%- if section.settings.button_hover_background_color != blank or section.settings.button_hover_text_color != blank -%}
    #CustomHero-{{ section.id }} .button:hover {
      {%- if section.settings.button_hover_background_color != blank -%}
        background-color: {{ section.settings.button_hover_background_color }};
        border-color: {{ section.settings.button_hover_background_color }} !important;
      {%- endif -%}
      {%- if section.settings.button_hover_text_color != blank -%}
        color: {{ section.settings.button_hover_text_color }};
      {%- endif -%}
    }
  {%- endif -%}
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<div
  id="CustomHero-{{ section.id }}"
  class="custom-hero custom-hero--{{ section.settings.height }} custom-hero--content-align-{{ section.settings.desktop_content_alignment }} custom-hero--content-align-mobile-{{ section.settings.mobile_content_alignment }} custom-hero--content-position-{{ section.settings.content_position }}{% if section.settings.button_label == blank and section.settings.section_link != blank %} custom-hero--clickable{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
  {% if section.settings.button_label == blank and section.settings.section_link != blank %}
    onclick="window.location.href='{{ section.settings.section_link }}'"
  {% endif %}
>
  {%- if section.settings.image != blank -%}
    <div class="custom-hero__media custom-hero__media--{{ section.settings.image_behavior }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{
        section.settings.image
        | image_url: width: 3840
        | image_tag:
          sizes: '100vw',
          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
          fetchpriority: fetch_priority
      }}
    </div>
  {%- endif -%}

  <div class="custom-hero__content{% if section.settings.content_layout == 'between' %} custom-hero__content--layout-between{% endif %} section-{{ section.id }}-padding">
    <div class="w-full">
      <div class="custom-hero__text-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {%- if section.settings.heading != blank -%}
          <h2 class="custom-hero__heading inline-richtext {{ section.settings.heading_size }}{% if section.settings.underline_heading %} custom-hero__heading--underlined{% endif %}">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.content_layout == 'between' -%}
          <div class="custom-hero__text-content">
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="custom-hero__text rte {{ section.settings.text_style }}">
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <div class="custom-hero__button">
            <a
              {% if section.settings.button_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.button_link }}"
              {% endif %}
              class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
            >
              {{ section.settings.button_label | escape }}
            </a>
          </div>
        {%- endif -%}

        {%- if section.settings.content_layout == 'between' -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

