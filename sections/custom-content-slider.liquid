{{ 'section-custom-content-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #CustomSlider-{{ section.id }} {
    position: relative;
    {%- if section.settings.height == 'small' -%}
      min-height: 300px;
    {%- elsif section.settings.height == 'medium' -%}
      min-height: 500px;
    {%- elsif section.settings.height == 'large' -%}
      min-height: 700px;
    {%- elsif section.settings.height == 'full' -%}
      min-height: 100vh;
    {%- endif -%}
  }

  {%- for block in section.blocks -%}
    #CustomSlide-{{ section.id }}-{{ forloop.index0 }} {
      {%- if section.settings.height == 'small' -%}
        min-height: 300px;
      {%- elsif section.settings.height == 'medium' -%}
        min-height: 500px;
      {%- elsif section.settings.height == 'large' -%}
        min-height: 700px;
      {%- elsif section.settings.height == 'full' -%}
        min-height: 100vh;
      {%- endif -%}
      {%- if block.settings.background_color != blank -%}
        background-color: {{ block.settings.background_color }};
      {%- endif -%}
      {%- if block.settings.text_color != blank -%}
        color: {{ block.settings.text_color }};
      {%- endif -%}
    }

    #CustomSlide-{{ section.id }}-{{ forloop.index0 }}::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, {{ block.settings.image_overlay_opacity | divided_by: 100.0 }});
      z-index: 1;
    }

    #CustomSlide-{{ section.id }}-{{ forloop.index0 }} .custom-slide__content {
      position: relative;
      z-index: 2;
    }

    {%- if block.settings.text_color != blank -%}
      #CustomSlide-{{ section.id }}-{{ forloop.index0 }} .custom-slide__heading,
      #CustomSlide-{{ section.id }}-{{ forloop.index0 }} .custom-slide__text,
      #CustomSlide-{{ section.id }}-{{ forloop.index0 }} .custom-slide__text p {
        color: {{ block.settings.text_color }};
      }
    {%- endif -%}

    /* Button styles - Override base styles and apply custom colors */
    #CustomSlide-{{ section.id }}-{{ forloop.index0 }} .button {
      /* Reset base button styles */
      outline: none !important;
      border: 1px solid;
      box-shadow: none !important;

      {%- if block.settings.button_background_color != blank -%}
        background-color: {{ block.settings.button_background_color }};
      {%- endif -%}
      {%- if block.settings.button_text_color != blank -%}
        color: {{ block.settings.button_text_color }};
        border: 1px solid {{ block.settings.button_text_color }} !important;
      {%- endif -%}
    }

    {%- if block.settings.button_hover_background_color != blank or block.settings.button_hover_text_color != blank -%}
      #CustomSlide-{{ section.id }}-{{ forloop.index0 }} .button:hover {
        {%- if block.settings.button_hover_background_color != blank -%}
          background-color: {{ block.settings.button_hover_background_color }};
          border-color: {{ block.settings.button_hover_background_color }} !important;
        {%- endif -%}
        {%- if block.settings.button_hover_text_color != blank -%}
          color: {{ block.settings.button_hover_text_color }};
        {%- endif -%}
      }
    {%- endif -%}
  {%- endfor -%}
{%- endstyle -%}

<div
  id="CustomSlider-{{ section.id }}"
  class="custom-slider custom-slider--{{ section.settings.height }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
  data-autoplay="{{ section.settings.autoplay }}"
  data-autoplay-speed="{{ section.settings.autoplay_speed }}"
>
  <div class="custom-slider__track">
    {%- for block in section.blocks -%}
      {%- liquid
        assign slide_fetch_priority = 'auto'
        if section.index == 1 and forloop.index0 == 0
          assign slide_fetch_priority = 'high'
        endif
      -%}

      <div
        id="CustomSlide-{{ section.id }}-{{ forloop.index0 }}"
        class="custom-slide custom-slide--content-align-{{ block.settings.desktop_content_alignment }} custom-slide--content-align-mobile-{{ block.settings.mobile_content_alignment }} custom-slide--content-position-{{ block.settings.content_position }}{% if block.settings.button_label == blank and block.settings.section_link != blank %} custom-slide--clickable{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
        {% if block.settings.button_label == blank and block.settings.section_link != blank %}
          onclick="window.location.href='{{ block.settings.section_link }}'"
        {% endif %}
        {{ block.shopify_attributes }}
      >
        {%- if block.settings.image != blank -%}
          <div class="custom-slide__media custom-slide__media--{{ block.settings.image_behavior }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
            {{
              block.settings.image
              | image_url: width: 3840
              | image_tag:
                sizes: '100vw',
                widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                fetchpriority: slide_fetch_priority
            }}
          </div>
        {%- endif -%}

        <div class="custom-slide__content{% if block.settings.content_layout == 'between' %} custom-slide__content--layout-between{% endif %} section-{{ section.id }}-padding">
          <div class="w-full">
            <div class="custom-slide__text-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              {%- if block.settings.heading != blank -%}
                <h2 class="custom-slide__heading inline-richtext {{ block.settings.heading_size }}{% if block.settings.underline_heading %} custom-slide__heading--underlined{% endif %}">
                  {{ block.settings.heading }}
                </h2>
              {%- endif -%}

              {%- if block.settings.content_layout == 'between' -%}
                <div class="custom-slide__text-content">
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <div class="custom-slide__text rte {{ block.settings.text_style }}">
                  {{ block.settings.text }}
                </div>
              {%- endif -%}

              {%- if block.settings.button_label != blank -%}
                <div class="custom-slide__button">
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{ block.settings.button_label | escape }}
                  </a>
                </div>
              {%- endif -%}

              {%- if block.settings.content_layout == 'between' -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <!-- Pagination dots -->
    <div class="custom-slider__pagination">
      {%- for block in section.blocks -%}
        <button
          class="custom-slider__dot{% if forloop.index0 == 0 %} custom-slider__dot--active{% endif %}"
          data-slide="{{ forloop.index0 }}"
          aria-label="Go to slide {{ forloop.index }}"
        ></button>
      {%- endfor -%}
    </div>

    <!-- Navigation arrows (optional) -->
    {%- if section.settings.show_arrows -%}
      <button class="custom-slider__arrow custom-slider__arrow--prev" aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button class="custom-slider__arrow custom-slider__arrow--next" aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    {%- endif -%}
  {%- endif -%}
</div>

<script src="{{ 'custom-content-slider.js' | asset_url }}" defer="defer"></script>

