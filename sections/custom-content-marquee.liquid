{{ 'section-custom-content-marquee.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #CustomMarquee-{{ section.id }} {
    {%- if section.settings.background_color != blank -%}
      background-color: {{ section.settings.background_color }};
    {%- endif -%}
    {%- if section.settings.text_color != blank -%}
      color: {{ section.settings.text_color }};
    {%- endif -%}
  }

  {%- if section.settings.text_color != blank -%}
    #CustomMarquee-{{ section.id }} .custom-marquee__text {
      color: {{ section.settings.text_color }};
    }
  {%- endif -%}

  #CustomMarquee-{{ section.id }} .custom-marquee__track {
    animation-duration: {{ section.settings.animation_speed }}s;
  }
{%- endstyle -%}

<div
  id="CustomMarquee-{{ section.id }}"
  class="custom-marquee custom-marquee--direction-{{ section.settings.direction }}{% unless section.settings.pause_on_hover %} custom-marquee--no-pause{% endunless %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %} section-{{ section.id }}-padding"
>
  {%- if section.settings.text != blank -%}
    <div class="custom-marquee__container">
      <div class="custom-marquee__track">
        <div class="custom-marquee__content">
          {%- for i in (1..10) -%}
            <span class="custom-marquee__text {{ section.settings.text_size }}">
              {{- section.settings.text | escape -}}
            </span>
            {%- unless forloop.last -%}
              <span class="custom-marquee__separator">{{ section.settings.separator | default: '•' }}</span>
            {%- endunless -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Custom Content Marquee",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "text",
      "default": "Running marquee text goes here",
      "label": "Marquee text",
      "info": "This text will scroll continuously across the screen"
    },
    {
      "type": "select",
      "id": "text_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra large"
        },
        {
          "value": "hxxl",
          "label": "XX-Large"
        }
      ],
      "default": "h1",
      "label": "Text size"
    },
    {
      "type": "text",
      "id": "separator",
      "default": "•",
      "label": "Separator",
      "info": "Character between repeated text (e.g. • | * —)"
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "select",
      "id": "direction",
      "options": [
        {
          "value": "left",
          "label": "Left to Right"
        },
        {
          "value": "right",
          "label": "Right to Left"
        }
      ],
      "default": "left",
      "label": "Direction"
    },
    {
      "type": "range",
      "id": "animation_speed",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "s",
      "label": "Animation speed",
      "default": 30,
      "info": "Lower numbers = faster animation"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "default": true,
      "label": "Pause animation on hover"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Custom Content Marquee"
    }
  ]
}
{% endschema %}
