            {{- 'icon-close.svg' | inline_asset_content -}}
          </span>
        </button>
      </div>

      <div class="size-chart-modal__body">
        <div class="size-chart-modal__toggle">
          <div class="size-chart-toggle">
            <button class="size-chart-toggle__btn size-chart-toggle__btn--active" data-unit="cm">CM</button>
            <button class="size-chart-toggle__btn" data-unit="in">INCHES</button>
          </div>
        </div>

