{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #CustomDual-{{ section.id }} .custom-dual__column--left {
    {%- if section.settings.background_color_left != blank -%}
      background-color: {{ section.settings.background_color_left }};
    {%- endif -%}
    {%- if section.settings.text_color_left != blank -%}
      color: {{ section.settings.text_color_left }};
    {%- endif -%}
  }

  #CustomDual-{{ section.id }} .custom-dual__column--right {
    {%- if section.settings.background_color_right != blank -%}
      background-color: {{ section.settings.background_color_right }};
    {%- endif -%}
    {%- if section.settings.text_color_right != blank -%}
      color: {{ section.settings.text_color_right }};
    {%- endif -%}
  }

  #CustomDual-{{ section.id }} .custom-dual__column--left::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.image_overlay_opacity_left | divided_by: 100.0 }});
    z-index: 1;
  }

  #CustomDual-{{ section.id }} .custom-dual__column--right::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.image_overlay_opacity_right | divided_by: 100.0 }});
    z-index: 1;
  }

  {%- if section.settings.text_color_left != blank -%}
    #CustomDual-{{ section.id }} .custom-dual__column--left .custom-dual__heading,
    #CustomDual-{{ section.id }} .custom-dual__column--left .custom-dual__text,
    #CustomDual-{{ section.id }} .custom-dual__column--left .custom-dual__text p {
      color: {{ section.settings.text_color_left }};
    }
  {%- endif -%}

  {%- if section.settings.text_color_right != blank -%}
    #CustomDual-{{ section.id }} .custom-dual__column--right .custom-dual__heading,
    #CustomDual-{{ section.id }} .custom-dual__column--right .custom-dual__text,
    #CustomDual-{{ section.id }} .custom-dual__column--right .custom-dual__text p {
      color: {{ section.settings.text_color_right }};
    }
  {%- endif -%}

    /* Left column button styles - Override base styles */
  #CustomDual-{{ section.id }} .custom-dual__column--left .button {
    /* Reset base button styles */
    outline: none !important;
    box-shadow: none !important;
    border:1px solid;
    border-color: {{ section.settings.text_color_left }};
    {%- if section.settings.button_background_color_left != blank -%}
      background-color: {{ section.settings.button_background_color_left }};
    {%- endif -%}
    {%- if section.settings.button_text_color_left != blank -%}
      color: {{ section.settings.button_text_color_left }};
      border: 1px solid {{ section.settings.button_text_color_left }} !important;
    {%- endif -%}
  }

  {%- if section.settings.button_hover_background_color_left != blank or section.settings.button_hover_text_color_left != blank -%}
    #CustomDual-{{ section.id }} .custom-dual__column--left .button:hover {
      {%- if section.settings.button_hover_background_color_left != blank -%}
        background-color: {{ section.settings.button_hover_background_color_left }};
        border-color: {{ section.settings.button_hover_background_color_left }} !important;
        border:1px solid;
      {%- endif -%}
      {%- if section.settings.button_hover_text_color_left != blank -%}
        color: {{ section.settings.button_hover_text_color_left }};
      {%- endif -%}
    }
  {%- endif -%}

    /* Right column button styles - Override base styles */
  #CustomDual-{{ section.id }} .custom-dual__column--right .button {
    /* Reset base button styles */
    outline: none !important;
    box-shadow: none !important;
    border:1px solid;
    {%- if section.settings.button_background_color_right != blank -%}
      background-color: {{ section.settings.button_background_color_right }};
    {%- endif -%}
    {%- if section.settings.button_text_color_right != blank -%}
      color: {{ section.settings.button_text_color_right }};
      border: 1px solid {{ section.settings.button_text_color_right }} !important;
    {%- endif -%}
  }

  {%- if section.settings.button_hover_background_color_right != blank or section.settings.button_hover_text_color_right != blank -%}
    #CustomDual-{{ section.id }} .custom-dual__column--right .button:hover {
      {%- if section.settings.button_hover_background_color_right != blank -%}
        background-color: {{ section.settings.button_hover_background_color_right }};
        border-color: {{ section.settings.button_hover_background_color_right }} !important;
      {%- endif -%}
      {%- if section.settings.button_hover_text_color_right != blank -%}
        color: {{ section.settings.button_hover_text_color_right }};
        border:1px solid;
      {%- endif -%}
    }
  {%- endif -%}

  #CustomDual-{{ section.id }} {
    {%- if section.settings.height == 'small' -%}
      min-height: 300px;
    {%- elsif section.settings.height == 'medium' -%}
      min-height: 500px;
    {%- elsif section.settings.height == 'large' -%}
      min-height: 700px;
    {%- elsif section.settings.height == 'full' -%}
      min-height: 100vh;
    {%- endif -%}
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<div
  id="CustomDual-{{ section.id }}"
  class="custom-dual custom-dual--{{ section.settings.height }} custom-dual--layout-{{ section.settings.layout }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div class="custom-dual__container{% if section.settings.layout == 'stacked' %} custom-dual__container--stacked{% endif %}">
    <!-- Left Column -->
    <div
      class="custom-dual__column custom-dual__column--left custom-dual__column--content-align-{{ section.settings.content_alignment_left }} custom-dual__column--content-position-{{ section.settings.content_position_left }}{% if section.settings.button_label_left == blank and section.settings.section_link_left != blank %} custom-dual__column--clickable{% endif %}"
      {% if section.settings.button_label_left == blank and section.settings.section_link_left != blank %}
        onclick="window.location.href='{{ section.settings.section_link_left }}'"
      {% endif %}
    >
      {%- if section.settings.image_left != blank -%}
        <div class="custom-dual__media custom-dual__media--{{ section.settings.image_behavior_left }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.image_left
            | image_url: width: 1920
            | image_tag: sizes: '50vw', widths: '375, 550, 750, 1100, 1500, 1920', fetchpriority: fetch_priority
          }}
        </div>
      {%- endif -%}

      <div class="custom-dual__content{% if section.settings.content_layout_left == 'between' %} custom-dual__content--layout-between{% endif %} section-{{ section.id }}-padding">
        <div class="custom-dual__text-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if section.settings.heading_left != blank -%}
            <h2 class="custom-dual__heading inline-richtext {{ section.settings.heading_size_left }}{% if section.settings.underline_heading_left %} custom-dual__heading--underlined{% endif %}">
              {{ section.settings.heading_left }}
            </h2>
          {%- endif -%}

          {%- if section.settings.content_layout_left == 'between' -%}
            <div class="custom-dual__text-content">
          {%- endif -%}

          {%- if section.settings.text_left != blank -%}
            <div class="custom-dual__text rte {{ section.settings.text_style_left }}">
              {{ section.settings.text_left }}
            </div>
          {%- endif -%}

          {%- if section.settings.button_label_left != blank -%}
            <div class="custom-dual__button">
              <a
                {% if section.settings.button_link_left == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.button_link_left }}"
                {% endif %}
                class="button{% if section.settings.button_style_secondary_left %} button--secondary{% else %} button--primary{% endif %}"
              >
                {{ section.settings.button_label_left | escape }}
              </a>
            </div>
          {%- endif -%}

          {%- if section.settings.content_layout_left == 'between' -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div
      class="custom-dual__column custom-dual__column--right custom-dual__column--content-align-{{ section.settings.content_alignment_right }} custom-dual__column--content-position-{{ section.settings.content_position_right }}{% if section.settings.button_label_right == blank and section.settings.section_link_right != blank %} custom-dual__column--clickable{% endif %}"
      {% if section.settings.button_label_right == blank and section.settings.section_link_right != blank %}
        onclick="window.location.href='{{ section.settings.section_link_right }}'"
      {% endif %}
    >
      {%- if section.settings.image_right != blank -%}
        <div class="custom-dual__media custom-dual__media--{{ section.settings.image_behavior_right }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{
            section.settings.image_right
            | image_url: width: 1920
            | image_tag: sizes: '50vw', widths: '375, 550, 750, 1100, 1500, 1920', fetchpriority: fetch_priority
          }}
        </div>
      {%- endif -%}

      <div class="custom-dual__content{% if section.settings.content_layout_right == 'between' %} custom-dual__content--layout-between{% endif %} section-{{ section.id }}-padding">
        <div class="custom-dual__text-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if section.settings.heading_right != blank -%}
            <h2 class="custom-dual__heading inline-richtext {{ section.settings.heading_size_right }}{% if section.settings.underline_heading_right %} custom-dual__heading--underlined{% endif %}">
              {{ section.settings.heading_right }}
            </h2>
          {%- endif -%}

          {%- if section.settings.content_layout_right == 'between' -%}
            <div class="custom-dual__text-content">
          {%- endif -%}

          {%- if section.settings.text_right != blank -%}
            <div class="custom-dual__text rte {{ section.settings.text_style_right }}">
              {{ section.settings.text_right }}
            </div>
          {%- endif -%}

          {%- if section.settings.button_label_right != blank -%}
            <div class="custom-dual__button">
              <a
                {% if section.settings.button_link_right == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.button_link_right }}"
                {% endif %}
                class="button{% if section.settings.button_style_secondary_right %} button--secondary{% else %} button--primary{% endif %}"
              >
                {{ section.settings.button_label_right | escape }}
              </a>
            </div>
          {%- endif -%}

          {%- if section.settings.content_layout_right == 'between' -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

