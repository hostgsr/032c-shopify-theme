{% comment %}
  Renders size chart modal

  Usage:
  {% render 'size-chart-modal' %}
{% endcomment %}

<div class="size-chart-modal" id="SizeChartModal" style="display: none;">
  <div class="size-chart-modal__overlay">
    <div class="size-chart-modal__content">
      <div class="size-chart-modal__header">
        <h2 class="size-chart-modal__title">Size Chart</h2>
        <button class="size-chart-modal__close" type="button" aria-label="Close size chart">
          <span class="svg-wrapper">
            {{- 'icon-close.svg' | inline_asset_content -}}
          </span>
        </button>
      </div>

      <div class="size-chart-modal__body">
        <div class="size-chart-modal__intro">
          <p>This is a unisex collection piece. Please use the conversion chart to select the correct size for you.</p>
        </div>

        <div class="size-chart-modal__toggle">
          <div class="size-chart-toggle">
            <button class="size-chart-toggle__btn size-chart-toggle__btn--active" data-unit="cm">CM</button>
            <button class="size-chart-toggle__btn" data-unit="in">INCHES</button>
          </div>
        </div>

